<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.soilnote.ActivityHome" >

    <Button
        android:id="@+id/take_photo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/circle_btn"
        android:text="拍照"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <Button
        android:id="@+id/learn_more"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/circle_btn"
        android:text="知识点"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/stroke" />

    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/learn_more"
        android:layout_alignRight="@+id/learn_more"
        android:layout_marginRight="23dp"
        android:background="@drawable/stroke" />

    <Button
        android:id="@+id/button3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/learn_more"
        android:layout_below="@+id/button1"
        android:background="@drawable/stroke" />

    <Button
        android:id="@+id/baidu_map"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignRight="@+id/learn_more"
        android:layout_below="@+id/Button01"
        android:layout_marginRight="14dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/circle_btn"
        android:text="地图"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/baidu_map"
        android:layout_below="@+id/button3"
        android:background="@drawable/circle_btn"
        android:text="未知"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/baidu_map"
        android:layout_alignRight="@+id/take_photo"
        android:background="@drawable/stroke" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button3"
        android:background="@drawable/stroke" />

    <Button
        android:id="@+id/button5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignRight="@+id/learn_more"
        android:layout_below="@+id/baidu_map"
        android:layout_marginTop="22dp"
        android:background="@drawable/stroke" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button5"
        android:background="@drawable/stroke" />

</RelativeLayout>